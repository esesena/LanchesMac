@model Lanche

<div class="container">
    <div class="row">
        <div class="card">
            <div class="text-center card-img-top">
                <img src="@Model.ImagemUrl" class="img-fluid" alt="" />
            </div>
            <div class="card-block">
                <h2 class="cad-title">@Model.Nome</h2>
                <p class="card-text"><h5>@Model.DescricaoDetalhada</h5></p>
                <a asp-controller="Lanche" asp-action="List" class="btn btn-outline-info">Ver todos os lanches</a>
                <a asp-controller="CarrinhoCompra" asp-action="AdicionarItemNoCarrinhoCompra" asp-route-lancheId="@Model.LancheId" class="btn btn-primary" id="cartButton">Adicionar @Model.Nome ao carrinho</a>
            </div>
        </div>
    </div>
</div>